

<div class="container-fluid">
  <div class="row-fluid">
    <div class="span4">
      <img src="/brain.png" class="img-rounded">
    </div>
    <div class="span8">
	    <h2>
	  		<%= @device.name %>
		</h2>

		<p>
		  <%= @device.description %>
		</p>
		<table class="table table-hover table-striped">
			<tr>
				<th>Brain Region</th>
				<th>Description</th>
				<th>Resources</th>
			</tr>
		<% @brain_regions.each do |region| %>
			<tr>
				<td><%=region.name%></td>
				<td>Insert description of specific association here</td>
				<td>Link to references </td>
			</tr>
		<% end %>
		</table>
    </div>
  </div>

